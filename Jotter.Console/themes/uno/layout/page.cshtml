
<article class="post-container post-container--single">
	<header class="post-header">
		<div class="post-meta">
			<time datetime="@Model.frontmatter.created" class="post-meta__date date">
				Posted on @Model.frontmatter.created.ToString(Model.config.dateFormat).
			</time> 
		</div>
		<h1 class="post-title">@Model.frontmatter.title</h1>
	</header>

	<section class="post">
		@Raw(Model.content)
	</section>

</article>
