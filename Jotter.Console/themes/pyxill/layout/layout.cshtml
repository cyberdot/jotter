@model Jotter.Core.Document.ILayoutViewModel

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<title>@Model.config.name</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="@Model.config.description">
	<meta name="author" content="@Model.config.author">
	<meta name="keywords" content="">
	<link rel="canonical" href="@Model.path">
	@Model.css	
</head>
<body>
	<div class="site-wrap">
		<header class="site-header px2 px-responsive">
			<div class="mt2 wrap">
				<div class="measure">
					<a href="@Model.filename" class="site-title">@Model.config.name</a>
					<nav class="site-nav right">
						<a href="about.html">About</a>
						<a href="tags.html">Tags</a>
						<a href="mailto:@Model.config.email">Contact</a>
					</nav>
					<div class="clearfix"></div>
				</div>
			</div>
		</header>
		<div class="post p2 p-responsive wrap" role="main">
			<div class="measure">
				@Model.content
			</div>
		</div>
	</div>
	<footer class="footer">
		<div class="p2 wrap">
			<div class="measure mt1 center">
				<nav class="social-icons icons">
					<a class="fa fa-rss rss" href="blog.rss"></a>
				</nav>
				<small> 
					Copyright &#169; 2017<br /> Powered by <a href="http://github.com/cyberdot/dnevnik" target="_blank">Dnevnik</a> &amp; Pixyll
				</small>
			</div>
		</div>
	</footer>
	@Model.js
	<script>hljs.initHighlightingOnLoad();</script>
</body>
</html>
