@model Jotter.Core.Index.IndexViewModel

@foreach(var post in content) {

	<div class="post">
		<a class="post-link" href="@post.filename">
			<p class="post-meta left">
				@post.frontmatter.created.ToString(Model.config.dateFormat)
			</p>
			<p class="post-author right">@Model.config.author</p>
			<div class="clearfix"></div>
			<h3 class="h2 post-title">@Model.post.frontmatter.title</h3>
			<p class="post-summary">@Model.post.excerpt</p>
		</a>
		<p class="post-meta">Tags:&nbsp;
			@if (post.frontmatter.tags.length > 0) {			    
				@foreach(var tag in post.frontmatter.tags) {
					<a href="/tags/@tag.html">@tag,</a> 
				}			
			}
		</p>
	</div>

}
