
<main id="content" class="content" role="main">
<article class="post post-template  @Model.frontmatter.tags">
	<header class="post-header">
        <h1 class="post-title">@Model.frontmatter.title</h1>
        <section class="post-meta">
            <time class="post-date">
				@Model.frontmatter.created.ToString(Model.config.dateFormat)
			</time>  
			@if (Model.frontmatter.tags.Length > 0) {
			<text>on</text>
				@foreach(var tag in Model.frontmatter.tags) {
					<a href="/tags/@(tag).html">@tag</a> 
				}			
			}	
        </section>
     </header>
	 
	<section class="post-content">
		@Raw(Model.content)
	</section>
	<footer class="post-footer">	
		<figure class="author-image">
			<a class="img" href="about.html" style="background-image: url(/assets/img/logo.png)"><span class="hidden">Author's Picture</span></a>
		</figure>

		<section class="author">
			<h4><a href="about.html">@Model.config.author</a></h4>

			<p>@Model.config.authorDescription</p>
			<div class="author-meta">
				<span class="author-location icon-location">@Model.config.authorLocation</span>
				<span class="author-link icon-link"><a href="@Model.config.url">@Model.config.url</a></span>
			</div>
		</section>

        <section class="share">
			<h4>Share this post</h4>
			<a class="icon-twitter" href="https://twitter.com/intent/tweet?text=@Model.frontmatter.title&amp;url=@Model.config.url/@Model.frontmatter.slug" 
			onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
				<span class="hidden">Twitter</span>
			</a>
			<a class="icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u=@Model.config.url/@Model.frontmatter.slug" 
			onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
				<span class="hidden">Facebook</span>
			</a>
			<a class="icon-google-plus" href="https://plus.google.com/share?url=@Model.config.url/@Model.frontmatter.slug" 
			onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
				<span class="hidden">Google+</span>
			</a>
		</section>		

    </footer>
	@if (Model.config.enableDisqusComments) {
		Jotter.Core.DisqusComments.render(Model.path, Model.config.disqusUrl);	 
	}
</article>
</main>
